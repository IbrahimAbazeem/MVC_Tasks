@model CenterCourses.ViewModels.TraineeViewModel

@{
    ViewData["Title"] = "Result";
}

<h1>Details</h1>

<div class="card" style="width:300px">
    <img class="card-img-top" src="/Images/@Model.ImageURL" alt="Trainee Image">
    <div class="card-body">
        <h4 class="card-title">@Model.TraineeName</h4>
        <h4 class="card-title">@Model.CourseName</h4> 
        <p class="card-text">Degree: @Model.TraineeDegree</p>
        <p class="card-text" style="color: @Model.Color">
            Status: @Model.TraineeStatus
        </p>
    </div>
</div>
